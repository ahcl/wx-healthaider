page {
  height: 100%;
}

.splash-bg {
  width: 100%;
  background-size: 100%;
}

.head {
  height:40px;
}

.body {
  flex: 1;
}

.preloader-progress {
  width: 160px;
  height: 70px;
  margin: auto;
  overflow: auto;
  background-image: url(http://img2.okertrip.com/woosiyuan-empty.png);
  background-size: 160px 70px;
}

/*@noflip*/

.preloader-progress-bar {
  width: 160px;
  height: 70px;
  background-image: url(http://img2.okertrip.com/woosiyuan-full.png);
  background-size: 160px 70px;
}

.slide-splash-image{
  display: block;
  width: 100%;
  height: 100%;
}

.immediately-to-index-text{
  position: absolute;
  z-index: 9999;
  bottom: -50px;
  font-size: 20px;
  border: solid 1px #5b99ec;
  border-radius: 4px;
  padding: 8px 16px;
  opacity: 0;
}

.foot {
  height: 30px;
  font-size: 12px;
  color: #888;
  opacity: 0.6;
  position: absolute;
  z-index: 9999;
  bottom: 20px;
}
